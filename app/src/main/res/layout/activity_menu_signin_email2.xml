<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignEmail.MenuSigninEmail2"
        android:background="@drawable/backgroundimage1">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.07" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Upper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="110dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.93" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:src="@drawable/logo"
            android:layout_marginTop="50dp"
            app:layout_constraintBottom_toTopOf="@+id/Upper"
            app:layout_constraintEnd_toStartOf="@+id/Right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/Left"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.533" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@+id/Right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/Left"
            app:layout_constraintTop_toTopOf="@+id/Upper">

            <ImageView
                android:id="@+id/ButtonArrowBack"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/back" />

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_gravity="start"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/_138sdp"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_gravity="start"
                        android:layout_weight="0"
                        android:background="@color/blue_main"
                        tools:ignore="NestedWeights" />

                    <View
                        android:layout_width="@dimen/_76sdp"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_gravity="start"
                        android:layout_weight="0"
                        android:background="@color/white" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textStep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Step 2 of 3"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/textCrtPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textColor="@color/grey"
                    android:text="Create a password"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Tengahtengah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="180dp"
            app:layout_constraintEnd_toStartOf="@+id/Right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/Left"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2"/>

        <TextView
            android:id="@+id/titlename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/Right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/Left"
            app:layout_constraintTop_toTopOf="@+id/Tengahtengah"/>

        <TextView
            android:id="@+id/titlename1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_18sdp"
            android:textColor="@color/grey"
            android:text="This name will appear on your profile"
            android:textSize="@dimen/_9sdp"
            app:layout_constraintEnd_toStartOf="@+id/Right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/Left"
            app:layout_constraintTop_toTopOf="@+id/titlename"/>

        <EditText
            android:id="@+id/etNameUser"
            android:layout_width="@dimen/_258sdp"
            android:layout_height="@dimen/_33sdp"
            android:layout_marginTop="16dp"
            android:background="@drawable/borderbackground"
            android:hint="Your name"
            android:inputType="text"
            android:paddingStart="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintEnd_toStartOf="@+id/Right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/Left"
            app:layout_constraintTop_toTopOf="@+id/titlename1"
            tools:ignore="RtlSymmetry" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Tengahtengahlagi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@dimen/_208sdp"
            app:layout_constraintEnd_toStartOf="@+id/Right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/Left"
            app:layout_constraintTop_toTopOf="@+id/etNameUser"/>

        <TextView
            android:id="@+id/titledatebirth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Date of birth"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/Right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/Left"
            app:layout_constraintTop_toTopOf="@+id/Tengahtengahlagi"/>

        <TextView
            android:id="@+id/titledatebirth1"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/_18sdp"
            android:textColor="@color/grey"
            android:text="This name will appear on your profile"
            android:textSize="@dimen/_9sdp"
            app:layout_constraintEnd_toStartOf="@+id/Right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/Left"
            app:layout_constraintTop_toTopOf="@+id/titledatebirth"/>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_13sdp"
            app:layout_constraintEnd_toStartOf="@+id/Right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/Left"
            app:layout_constraintTop_toTopOf="@+id/titledatebirth1">

            <EditText
                android:id="@+id/etdaybirth"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_33sdp"
                android:background="@drawable/borderbackground"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="@dimen/_13ssp"
                android:hint="dd"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textColorHint="@color/grey"
                tools:ignore="RtlSymmetry"
                app:layout_constraintEnd_toStartOf="@+id/Right"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/Left"
                app:layout_constraintTop_toTopOf="@+id/linearLayout3"/>

            <Spinner
                android:id="@+id/monthSpinner"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_33sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:background="@drawable/borderbackground"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="@dimen/_15ssp"
                tools:ignore="RtlSymmetry"
                app:layout_constraintEnd_toStartOf="@+id/Right"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/etdaybirth"
                app:layout_constraintTop_toTopOf="@+id/linearLayout3"/>

            <EditText
                android:id="@+id/etyearsbirth"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_33sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:background="@drawable/borderbackground"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="@dimen/_13ssp"
                android:hint="yyyy"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textColorHint="@color/grey"
                tools:ignore="RtlSymmetry"
                app:layout_constraintEnd_toStartOf="@+id/Right"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/Left"
                app:layout_constraintTop_toTopOf="@+id/linearLayout3"/>
        </LinearLayout>

        <TextView
            android:id="@+id/titledatebirtherrormsg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50sdp"
            android:text="Please enter the year of your birth date using four digits (e.g., 1990)."
            android:textColor="@color/light_red"
            android:textSize="15sp"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/Right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/Left"
            app:layout_constraintTop_toTopOf="@+id/linearLayout3"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Tengahtengahlagilagi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@dimen/_277sdp"
            app:layout_constraintEnd_toStartOf="@+id/Right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/titledatebirtherrormsg"
            app:layout_constraintTop_toTopOf="@+id/etNameUser"/>

        <TextView
            android:id="@+id/titlegender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/Right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/Left"
            app:layout_constraintTop_toTopOf="@+id/Tengahtengahlagilagi"/>

        <TextView
            android:id="@+id/titlegender1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_18sdp"
            android:textColor="@color/grey"
            android:text="We use your gender to help with the diet."
            android:textSize="@dimen/_9sdp"
            app:layout_constraintEnd_toStartOf="@+id/Right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/Left"
            app:layout_constraintTop_toTopOf="@+id/titlegender"/>

        <RadioGroup
            android:id="@+id/genderRadioGroup1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintEnd_toStartOf="@+id/Right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/Left"
            app:layout_constraintTop_toTopOf="@+id/titlegender1">

            <RadioButton
                android:id="@+id/rbMan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                style="@style/CustomRadioButton"
                android:text="Man" />

            <RadioButton
                android:id="@+id/rbWoman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                style="@style/CustomRadioButton"
                android:layout_marginStart="@dimen/_6sdp"
                android:text="Woman" />

            <RadioButton
                android:id="@+id/rbNonBinary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                style="@style/CustomRadioButton"
                android:layout_marginStart="@dimen/_6sdp"
                android:text="Non-binary" />


        </RadioGroup>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Tengahtengahapadah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@dimen/_334sdp"
            app:layout_constraintEnd_toStartOf="@+id/Right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/titledatebirtherrormsg"
            app:layout_constraintTop_toTopOf="@+id/genderRadioGroup1"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_67sdp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@+id/Right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/Left"
            app:layout_constraintTop_toTopOf="@+id/Tengahtengahapadah">

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/titleheight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/titleheight1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textColor="@color/grey"
                    android:text="Your height is much needed"
                    android:textSize="@dimen/_9sdp"
                    />

                <EditText
                    android:id="@+id/ettitleheight"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_33sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:background="@drawable/borderbackground"
                    android:hint="Your height"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/_13ssp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_30sdp"
                app:layout_constraintEnd_toStartOf="@+id/linearLayout4">
                <TextView
                    android:id="@+id/titleweight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/titleweight1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textColor="@color/grey"
                    android:text="Your weight is much needed"
                    android:textSize="@dimen/_9sdp"
                    />

                <EditText
                    android:id="@+id/ettitleweight"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_33sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:background="@drawable/borderbackground"
                    android:hint="Your weight"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/_13ssp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Tengahtengahapadahini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@dimen/_400sdp"
            app:layout_constraintEnd_toStartOf="@+id/Right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/titledatebirtherrormsg"
            app:layout_constraintTop_toTopOf="@+id/Tengahtengahapadah"/>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="0dp"
            android:layout_height="@dimen/_71sdp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@+id/Right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/Left"
            app:layout_constraintTop_toTopOf="@+id/Tengahtengahapadahini">

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/titleage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/titleage1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textColor="@color/grey"
                    android:text="Your age is much needed"
                    android:textSize="@dimen/_9sdp"
                    />

                <EditText
                    android:id="@+id/ettitleage"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_33sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:background="@drawable/borderbackground"
                    android:hint="Your age"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/_13ssp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_30sdp"
                app:layout_constraintEnd_toStartOf="@+id/linearLayout5">
                <TextView
                    android:id="@+id/titlebloodtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blood Type"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/titlebloodtype1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textColor="@color/grey"
                    android:text="blood type is much needed"
                    android:textSize="@dimen/_9sdp"
                    />

                <EditText
                    android:id="@+id/ettitlebloodtype"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_33sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:background="@drawable/borderbackground"
                    android:hint="Your blood type"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/_13ssp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Tengahtengahlagiterus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@dimen/_468sdp"
            app:layout_constraintEnd_toStartOf="@+id/Right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/titledatebirtherrormsg"
            app:layout_constraintTop_toTopOf="@+id/Tengahtengahapadah"/>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="0dp"
            android:layout_height="@dimen/_70sdp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/Right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/Left"
            app:layout_constraintTop_toTopOf="@+id/Tengahtengahlagiterus">

            <TextView
                android:id="@+id/titlealaergi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allergy"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/titlealaergi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:textColor="@color/grey"
                android:text="What are your allergies"
                android:textSize="@dimen/_9sdp"
                />

            <EditText
                android:id="@+id/ettitlealaergi"
                android:layout_width="@dimen/_258sdp"
                android:layout_height="@dimen/_33sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:paddingStart="15dp"
                android:background="@drawable/borderbackground"
                android:hint="Your allergies"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/_13ssp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Tengahtengahlagiterusaja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@dimen/_520sdp"
            app:layout_constraintEnd_toStartOf="@+id/Right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/titledatebirtherrormsg"
            app:layout_constraintTop_toTopOf="@+id/Tengahtengahlagiterus"/>

        <Button
            android:id="@+id/nextSignInDateForm"
            android:layout_width="0dp"
            android:layout_height="@dimen/_33sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/borderblue"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp"
            app:layout_constraintEnd_toStartOf="@+id/Right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/Left"
            app:layout_constraintTop_toTopOf="@+id/Tengahtengahlagiterusaja"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@+id/Right"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/Left"
            app:layout_constraintTop_toTopOf="@+id/nextSignInDateForm">

            <TextView
                android:layout_width="@dimen/_170sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/_7sdp"
                android:textColor="@color/grey"
                android:textAlignment="center"
                android:text="Start your health not with regret, but with a smile. Let's start your healthy life with us."
                tools:ignore="HardcodedText" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>