<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green_main</item>
        <item name="colorPrimaryDark">@color/blue_second</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="CustomRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/green_main</item>
        <item name="android:buttonTint">@color/grey</item>
    </style>
    <style name="Text">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Circular">
        <item name="cornerSize">10%</item>
    </style>
    <style name="CircularFull">
        <item name="cornerSize">50%</item>
    </style>
    <style name="RoundedCorners">
        <item name="cornerSize">5%</item>
    </style>
</resources>