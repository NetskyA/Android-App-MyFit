<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Right Shadow Layer -->
    <item android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape>
            <solid android:color="#80FFFFFF"/> <!-- Semi-transparent blue shadow -->
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!-- Left Shadow Layer -->
    <item android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape>
            <solid android:color="#80FFFFFF"/> <!-- Semi-transparent blue shadow -->
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!-- Bottom Shadow Layer -->
    <item android:bottom="4dp">
        <shape>
            <solid android:color="#80FFFFFF"/> <!-- Semi-transparent blue shadow -->
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!-- Content Layer -->
    <item>
        <shape>
            <solid android:color="#F8D6D6D6" /> <!-- Light white smoke color for background -->
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="#F7D1D1D1" /> <!-- Light white smoke border -->
        </shape>
    </item>
</layer-list>
