<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Right Shadow Layer -->
    <item android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape>
            <solid android:color="#800084d3"/> <!-- Semi-transparent blue shadow -->
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <!-- Left Shadow Layer -->
    <item android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape>
            <solid android:color="#800084d3"/> <!-- Semi-transparent blue shadow -->
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <!-- Bottom Shadow Layer -->
    <item android:bottom="4dp">
        <shape>
            <solid android:color="#800084d3"/> <!-- Semi-transparent blue shadow -->
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <!-- Content Layer -->
    <item>
        <shape>
            <solid android:color="#E0E0E0"/> <!-- Darker grey background -->
            <corners android:radius="20dp" />
            <stroke android:width="1dp" android:color="#F7BCBCBC" /> <!-- Light white smoke border remains the same -->
        </shape>
    </item>
</layer-list>
