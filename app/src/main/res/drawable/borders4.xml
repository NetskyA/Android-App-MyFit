<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00878787" />
            <corners android:radius="25dp" />
        </shape>
    </item>
    <!-- Foreground layer with transparent center to create the shadow effect -->
    <item android:bottom="4dp" android:end="2dp" android:start="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent center -->
            <stroke
                android:width="2dp"
                android:color="#75BCBCBC" /> <!-- Your border color -->
            <corners android:radius="25dp" />
        </shape>
    </item>
</layer-list>
